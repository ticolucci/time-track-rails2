<!DOCTYPE html>
<html>
  <head>
	<link href="images/Tasks_Icon.png" rel="shortcut icon">
    <title>Task Time Tracker</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
					<div id="header">
						<% if current_user %>
							<%= link_to current_user.username, edit_current_user_path %> | <%= link_to 'logout', logout_path %>
						<% end %>
					</div>
      <%= yield %>
    </div>
  </body>
</html>
